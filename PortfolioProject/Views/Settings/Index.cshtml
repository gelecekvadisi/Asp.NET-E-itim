
@using PortfolioProject.Models.Entity
@model List<SiteSettings>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <h4 class="mt-0 header-title">Site Ayarları</h4>
                <p class="text-muted font-14 mb-3">
                    Bu kısımda site ayarları bilgileri yer almaktadır.
                </p>

                <div class="table-responsive">
                    <table class="table mb-0">
                        <thead class="table-dark">
                            <tr>
                                <th>#</th>
                                <th>Adres</th>                                
                                <th>Mail Adresi</th>                                
                                <th>Telefon Numarası</th>                                
                                <th>Facebook Linki</th>                                
                                <th>Instagram Linki</th>                                
                                <th>Linkedin Linki</th>                                
                                <th>Twitter Linki</th>                                
                                <th>Düzenle</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                            <tr>
                                <th scope="row">#</th>
                                <td>@item.Address</td>
                                <td>@item.Email</td>
                                <td>@item.Phone</td>
                                <td>@item.FacebookLink</td>
                                <td>@item.InstagramLink</td>
                                <td>@item.LinkedinLink</td>
                                <td>@item.TwitterLink</td>
                                <td>
                                    <a href="/Settings/SettingsUpdate/@item.ID" class="btn btn-warning">Düzenle</a>
                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>

            </div>
        </div>
    </div>
</div>

