
@{
    ViewBag.Title = "SkillAdd";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <h4 class="header-title">Yeni Yetenek Ekle</h4>

                <div class="row">
                    <div class="col-lg-12">
                        <form method="post">
                            
                            <div class="mb-3">
                                <label for="simpleinput" class="form-label">Başlık</label>
                                <input type="text" name="Title" class="form-control" placeholder="Başlık"/>
                            </div>

                            <div class="mb-3">
                                <label for="simpleinput" class="form-label">Yetenek Yüzdesi</label>
                                <input type="number" name="Percent" min="0" max="100" class="form-control" placeholder="Yetenek Yüzdesi"/>
                            </div>

                            <button type="submit" class="btn btn-primary">Ekle</button>

                        </form>
                    </div>
                </div>
                <!-- end row-->

            </div> <!-- end card-body -->
        </div> <!-- end card -->
    </div><!-- end col -->
</div>

